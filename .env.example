# Rename this file to .env and put your real keys here. Do NOT commit your real .env file.

# Google Gemini API key (required for chatbot)
GEMINI_API_KEY=your_gemini_api_key_here

# Default Gemini model to use
GEMINI_MODEL=gemini-1.5-flash

# Optional system prompt to guide the assistant
GEMINI_SYSTEM_PROMPT=You are a helpful, concise assistant specialized in blood donation guidance.

# Optional: temperature (0.0 - 1.0)
GEMINI_TEMPERATURE=0.2
